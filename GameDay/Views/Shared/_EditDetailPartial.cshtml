@model GameDay.Models.EventVM

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
            <div id="detail-form">
                <div class="col-md-2">
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Name):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Game):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.DateTime):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Time):</label>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.AddressName):</label>
                    </div>
                </div>
                <div class="col-md-4 verticalLine">
                    <div style="padding-left: 2px;">
                        <div class="detail-control">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="detail-control">
                            @Html.EnumDropDownListFor(model => model.Game, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="detail-control">
                            @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
                        </div>
                        <div class="detail-control">
                            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @type = "time", @class = "form-control" } })
                        </div>
                        <div class="detail-control">
                            @Html.DropDownListFor(x => x.AddressId, Model.AddressList, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group tagBox">
                    <div class="col-md-12">
                        <label for="playerBox">Attending:</label><br/>
                        @Html.EditorFor(model => model.PlayersAttending, new {htmlAttributes = new {data_role = "tagsinput", @class = "form-control tagsInputField"}})
                    </div>
                    &nbsp;*To add another player, enter name and press ","
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" id="saveButton" 
                               onclick="showDetails(@Html.DisplayFor(model => model.ID),
                               @Html.DisplayFor(model => model.Location.Line1), 
                                @Html.DisplayFor(model => model.Location.Line2),
                                @Html.DisplayFor(model => model.Location.City),
                                @Html.DisplayFor(model => model.Location.State), 
                                @Html.DisplayFor(model => model.Location.Zip))" />
                        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn-warning btn" })
                    </div>
                </div>
            </div>
        </div>
    }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lets Get A Game Going!</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap-theme.css"/>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-tagsinput/dist/bootstrap-tagsinput.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/site.css" />
</head>
<body>
    <div class="navbar navbar-fixed-top NavbarBackgroup">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameDay", "Index", "Home", new { area = "" }, new { @class = "navbar-brand blackFont"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.ActionLink("Location", "Index" , "Address", new { area = "" }, new { @class = "navbar-brand blackFont"})
                    @*<li>@Html.ActionLink("Player", "Index", "Player")</li>*@
                </ul>
                <div style="margin-right: 1em;">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
<script src="~/lib/jquery-ui/jquery-ui.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.signalR-2.1.2.js" type="text/javascript"></script>
<script src="~/signalr/hubs"></script>
<script src="~/lib/bootstrap-tagsinput/dist/bootstrap-tagsinput.js"></script>
<script src="~/Scripts/js/site.js"></script>
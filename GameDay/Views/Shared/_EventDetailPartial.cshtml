@model GameDay.Models.EventVM

@Html.AntiForgeryToken()
<div class="form-horizontal">
    <div id="detail-form">
        <div class="col-md-2">
            <div class="form-group detail-control">
                <label>@Html.DisplayNameFor(model => model.Name):</label>
            </div>
            <div class="form-group detail-control">
                <label>@Html.DisplayNameFor(model => model.Game):</label>
            </div>
            <div class="form-group detail-control">
                <label>@Html.DisplayNameFor(model => model.Date):</label>
            </div>
            <div class="form-group detail-control">
                <label>@Html.DisplayNameFor(model => model.Time):</label>
            </div>
            <div class="form-group detail-control">
                <label>@Html.DisplayNameFor(model => model.AddressName):</label>
            </div>
        </div>
        <div class="col-md-4 verticalLine">
            <div class="detail-left-margin">
                <label id="DetailEventNameLabel">@Html.DisplayFor(model => model.Name)</label>
            </div>
            <div class="detail-left-margin">
                <label id="DetailGameTypeLabel">@Html.DisplayFor(model => model.Game)</label>
            </div>
            <div class="detail-left-margin">
                <label id="DetailEventDateLabel">@Html.DisplayFor(model => model.Date)</label>
            </div>
            <div class="detail-left-margin">
                <label id="DetailEventTimeLabel">@Html.DisplayFor(model => model.Time)</label>
            </div>
            <div class="detail-left-margin">
                <label id="LocationLabel">@Html.DisplayFor(model => model.Location.Name)</label>
                <address>
                    @Html.DisplayFor(model => model.Location.Line1) @Html.DisplayFor(model => model.Location.Line2)<br>
                    @Html.DisplayFor(model => model.Location.City), @Html.DisplayFor(model => model.Location.State) @Html.DisplayFor(model => model.Location.Zip)<br>
                </address>
            </div>

        </div>
        <div class="form-group tagBox">
            <div class="col-md-12">
                <label>Attending:</label><br/>
                @foreach (var item in Model.PlayerAttendingList)
                {
                    <span class="tag label label-info">@Html.DisplayFor(x => item)</span>
                }
            </div>
        </div>
        <div>
            <button type="button" class="btn btn-primary clearfix" id="editButton" 
                    onclick="loadEditScreen(@Html.DisplayFor(model => model.ID),
                    @Html.DisplayFor(model => model.Location.Line1), 
                    @Html.DisplayFor(model => model.Location.Line2),
                    @Html.DisplayFor(model => model.Location.City),
                    @Html.DisplayFor(model => model.Location.State), 
                    @Html.DisplayFor(model => model.Location.Zip));">Edit</button>
            @Html.ActionLink("Delete", "Delete", new {id = Model.ID}, new {@class = "btn btn-danger clearfix"})
        </div>
    </div>
</div>



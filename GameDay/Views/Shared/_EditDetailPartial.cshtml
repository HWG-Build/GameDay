@model GameDay.Models.EventVM


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
            <div id="detail-form">
                <div class="col-md-2">
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Name):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Game):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Date):</label>
                    </div>
                    <div class="form-group marginDetails">
                        <label>@Html.DisplayNameFor(model => model.Time):</label>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.AddressName):</label>
                    </div>
                </div>
                <div class="col-md-4 verticalLine">
                    <div style="padding-left: 2px;">
                        <div class="form-group detail-control">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group detail-control">
                            @Html.EnumDropDownListFor(model => model.Game, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Game, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group detail-control">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group detail-control">
                            @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @type = "time", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group detail-control">
                            @Html.DropDownListFor(x => x.AddressId, Model.AddressList, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6" id="googlemapEdit">
                    @*<img src="~/Content/Images/map.png" />*@
                </div>
                <div class="form-group tagBox">
                    <div class="col-md-12">
                        <label for="playerBox">Attending:</label><br/>
                        @Html.EditorFor(model => model.PlayersAttending, new {htmlAttributes = new {data_role = "tagsinput", @class = "form-control tagsInputField"}})
                    </div>
                    &nbsp;*To add another player, enter name and press ","
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" id="saveButton" onclick="showDetails(@Html.DisplayFor(model => model.ID))" />
                        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn-warning btn" })
                    </div>
                </div>
            </div>
        </div>
    }
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqcAyGFqYiYHtuZw7IVmfnz70BTFw-SLk&callback=initMap"
        type="text/javascript"></script>
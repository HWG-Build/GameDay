@model GameDay.Models.EventDeleteVM

<div class="container">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Event</h4>
        <hr />
        <div class="col-md-1">
            <div style="padding-left: 2px;">
                <div style="margin-bottom:.3em">
                    @Html.DisplayNameFor(model => model.Name):
                </div>
                <div style="margin-bottom:.3em">
                    @Html.DisplayNameFor(model => model.Game):
                </div>
                <div style="margin-bottom:.3em">
                    @Html.DisplayNameFor(model => model.DateTime):
                </div>
                <div style="margin-bottom:.3em">
                    @Html.DisplayNameFor(model => model.Location):
                </div>
            </div>
        </div>
        <div class="col-md-9 verticalLine">
            <div>
                <label>@Html.DisplayFor(model => model.Name)</label>
            </div>
            <div>
                <label>@Html.DisplayFor(model => model.Game)</label>
            </div>
            <div>
                <label>@Html.DisplayFor(model => model.DateTime)</label>
            </div>
            <div>
                <label id="LocationLabel">@Html.DisplayFor(model => model.Location.Name)</label>
                <address>
                    @Html.DisplayFor(model => model.Location.Line1) @Html.DisplayFor(model => model.Location.Line2)<br>
                    @Html.DisplayFor(model => model.Location.City), @Html.DisplayFor(model => model.Location.State) @Html.DisplayFor(model => model.Location.Zip)<br>
                </address>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn-warning btn" })
        </div>
    }
</div>

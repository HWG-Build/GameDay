@model IEnumerable<Domain.Layer.Models.Event>
@if (Model.Count() == 0)
{
    <h4 class="grayFont leftMargin">There are no events</h4>
}
else
{
    foreach (var item in Model)
    {
        <div class="panel panel-body" onclick="showDetails(@Html.DisplayFor(modelItem =>item.ID))">
            <div class="col-xs-3 col-md-2 col-lg-2">
                <img src="~/Content/Images/@Html.DisplayFor(modelItem=> item.Game)'.png" />
            </div>
            <div class="col-xs-12 col-md-10 col-lg-10 verticalLine">
                <div class="form-inline" style="margin-top: .7em;">
                    <label class="col-xs-2 col-md-2 col-lg-2 clearfix" for="EventDateTimeLabel">@Html.DisplayNameFor(model => model.Date):</label>
                    <p class="col-xs-4 col-md-4 col-lg-4 clearfix" id="EventDateTimeLabel">@Html.DisplayFor(modelItem => item.Date)</p>
                    <label class="col-xs-2 col-md-2 col-lg-2 clearfix" for="EventDateTimeLabel">@Html.DisplayNameFor(model => model.Time):</label>
                    <p class="col-xs-4 col-md-4 col-lg-4 clearfix" id="EventDateTimeLabel">@Html.DisplayFor(modelItem => item.Time)</p>
                </div>
                <div class="form-inline">
                    <label class="col-xs-2 col-md-2 col-lg-2 clearfix" for="EventNameLabel">@Html.DisplayNameFor(model => model.Name):</label>
                    <p class="col-xs-4 col-md-4 col-lg-4 clearfix" id="EventNameLabel">@Html.DisplayFor(modelItem => item.Name)</p>
                    <label class="col-xs-2 col-md-2 col-lg-2 clearfix" for="LocationLabel">@Html.DisplayNameFor(model => model.Location):</label>
                    <p class="col-xs-4 col-md-4 col-lg-4 clearfix" id="LocationLabel">@Html.DisplayFor(modelItem => item.Location)</p>
                </div>
            </div>
        </div>
    }
}
